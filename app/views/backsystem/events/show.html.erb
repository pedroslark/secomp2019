
<div class="content2">
  <div class="container">
    <div class="admintable">
      <div class="container">

        <br><div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <h4 class="h4"><%= @event.name %></h4>
              <div class="dlab-separator bg-primary"></div><br><br>

              <div class="actions">
                  <div class="row">

                    <div class="form-group">
                      <input type="text" id="searchName" class="form-control" placeholder="Filtrar por nome">
                    </div>

                  </div>
              </div><br>

              <h4 class="h4">Alunos:</h4>
              <div class="dlab-separator bg-primary">

            </div>
          </div>
        </div>


        <%= form_for [:backsystem, @event]  do |f| %>


          <div class="form-check">
            <div class="checkbox">
              <%= f.collection_check_boxes :student_ids, @students, :id, :name do |cb| %>
                <div class="student-item">
                  &nbsp; <label class="form-check-label"><%= cb.text %></label> <%= cb.check_box %> &nbsp; <%= cb.object.email %>
                </div><br>
              <% end %>
            </div>
          </div>


          <br><div class="row">
            <div class="col-md-1">
              <%= f.submit "Salvar", class:"btn btn-success" %>
            </div>
          <%end%>
            <div class="col-md-1">
              <%= button_to "Cancelar", backsystem_events_path, method: :get, class: "btn btn-danger" %>
            </div>
          </div><br>

      </div>
    </div>
  </div>
</div>

<script>
  $("#searchName").on("keyup", function() {
  	var value = $("#searchName").val().toLowerCase();
  	$('.student-item label').filter(function() {
  		$(this).parent().toggle($(this).text().toLowerCase().indexOf(value) > -1)
  	});
  });
</script>
