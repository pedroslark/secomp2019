<%= form_for [:backsystem, @student]  do |f| %>

  <div class="row">

    <div class="field col-md-3">
      <label>Nome</label>
      <%= f.text_field :name, class:"form-control", placeholder: "Nome Completo*"%>
    </div><br>

      <div class="field col-md-3">
        <label>Email</label>
      <%= f.email_field :email, class:"form-control", placeholder: "Email Válido*"%>
    </div><br>

      <div class="field col-md-3">
        <label>Instituição de Ensino</label>
      <%= f.text_field :institution, class:"form-control", placeholder: "Instituição de Ensino"%>
    </div><br>

    <div class="field col-md-3">
      <label>Curso</label>
      <%= f.text_field :course, class:"form-control", placeholder: "Curso"%>
    </div><br><br><br><br>

    <div class="field col-md-3">
      <label>Código de Matrícula</label>
      <%= f.text_field :registration,
        :class => "form-control",
        :placeholder => "Código de Matrícula",
        :maxlength => 7
      %>
    </div><br>

    <div class="field col-md-3">
      <label>Telefone</label>
      <%= f.text_field :phone, class:"form-control", placeholder: "Telefone"%>
    </div><br><br><br><br>


    <div class="actions">
      <div class="col-md-3">
        <label>.</label>
        <%= f.submit text_submit , class:"btn btn-success" %>
      </div>
    </div><br><br>

<%end%>

    <div class="col-md-3">
      <label>.</label>
      <%= button_to "Voltar", backsystem_students_path, method: :get, class: "btn btn-danger" %>
    </div>

  </div>
